{
  "name": "bird-api",
  "version": "1.0.0",
  "description": "鳥の名前のAPIサーバ",
  "main": "server.js",
  "scripts": {
    "migrate":   "mongo birdAPI ./migrations/",
    "build":     "./node_modules/gulp/bin/gulp.js coffee",
    "start":     "node server.js &",
    "poststart": "sleep 3",
    "stop":      "psid=$(ps ar | grep \"node server.js\" | grep -v \"grep\" | cut -d\" \" -f1);if [[ $psid -ne '' ]];then kill $psid;fi",
    "do-test":   "./node_modules/jasmine-node/bin/jasmine-node specs/",

    "pretest":  "npm run migrate; npm run build; npm stop; npm start",
    "test":     "npm run do-test",
    "posttest": "npm stop"
  },
  "keywords": [
    "bird",
    "name",
    "academic-name"
  ],
  "repositoyy": {
      "type": "git",
      "url": "git@github.com:KamataRyo/bird-api.git"
  },
  "author": "KamataRyo",
  "license": "MIT",
  "dependencies": {
    "body-parser": "~1.0.1",
    "express": "~4.0.0",
    "mongoose": "~3.6.13",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "frisby": "^0.8.5",
    "gulp": "^3.9.1",
    "gulp-coffee": "^2.3.2",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-uglify": "^1.5.3",
    "jasmine-node": "^1.14.5"
  }
}
